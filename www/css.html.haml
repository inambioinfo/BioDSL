:css
  .center {
    text-align: center;
  }

  .right {
    text-align: right;
  }

  .left {
    text-align: left;
  }

  .bold {
    font-weight: bold;
  }

  img {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  table {
    border-collapse: collapse;
  }

  th {
    padding-left: 10px;
    padding-right: 10px;
  }

  td {
    padding-left: 10px;
    padding-right: 10px;
  }

  body {
    font-family: Arial, Helvetica, Verdana, sans-serif;
    width: 1000px;
    min-width: 1000px;
    max-width: 1000px;
    margin-left: 10%;
    margin-right: 10%;
  }

  .section {
    padding-bottom: 1em;
    border-bottom: 2px solid #ccc;
  }
